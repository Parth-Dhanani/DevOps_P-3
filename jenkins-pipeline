#!/usr/bin/env groovy

pipeline {
    agent any

environment {
MAVEN_OPTS = "-Xms512m -Xmx1024m"
}
    stages {
        stage('validate Maven Project') {
            steps {
                script {
                   bat 'mvn validate'
                }
            }
        }
        stage('compile Mevan Project') {
            steps {
                script {
                    bat 'mvn compile'
                }
            }
        }
        stage('Test Meven Project') {
            steps {
                script {
                    bat 'mvn test'
                }
            }
        }
        stage('Package Maven Project') {
            steps {
                script {
                    bat 'mvn package'
                }
            }
        }
    }
}
