#!/usr/bin/env groovy

pipeline {
    agent any

environment {
MAVEN_OPTS = "-Xms512m -Xmx1024m"
}
    stages {
        stage('validate Maven Project') {
            steps {
                script {
                   bat './mvnw validate'
                }
            }
        }
        stage('compile Mevan Project') {
            steps {
                script {
                    bat './mvnw compile'
                }
            }
        }
        stage('Test Meven Project') {
            steps {
                script {
                    bat './mvnw test'
                }
            }
        }
        stage('Package Maven Project') {
            steps {
                script {
                   bat './mvnw package'
                }
            }
        }
    }
}
